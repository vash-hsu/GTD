<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.blogspot.rulesare.getthingdone.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Vendor"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp"
                android:selectAllOnFocus="false"
                android:layout_weight="0.80"
                android:layout_width="100sp" />

            <EditText
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="gtd-rulesare.azurewebsites.net"
                android:ems="10"
                android:id="@+id/edittext_fqdn"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:background="#00ffcc"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:focusable="false"
                android:layout_width="240dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <TextView
                android:text="GET"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:id="@+id/textview1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:layout_height="40sp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:text="Done?"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/switch_onoff"
                    android:layout_weight="0.12" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12"></LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:text="what to do to achieve goals "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:lines="3"
                android:background="@android:color/holo_orange_light" />
        </ScrollView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="welcome"
                android:ems="10"
                android:id="@+id/edittext_rid"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                style="@android:style/Widget.Holo.EditText"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Create/POST"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button2post"
                android:layout_weight="1" />

            <Button
                android:text="Update/PUT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button2put"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button2delete"
                android:layout_weight="1" />

            <Button
                android:text="Reload"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button2reset"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
